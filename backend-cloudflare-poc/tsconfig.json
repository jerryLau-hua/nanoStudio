{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "lib": [
            "ES2021"
        ],
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false,
        "types": [
            "@cloudflare/workers-types"
        ],
        "noEmit": true,
        "isolatedModules": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}